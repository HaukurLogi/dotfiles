#!/bin/sh

python $HOME/python/app-command.py --runningcmd 'nvidia-settings -a CurrentMetaMode="DP-0: 1920x1080_240 @1440x1080 +0+0 {ViewPortIn=1440x1080, ViewPortOut=1920x1080+0+0}, DP-1: nvidia-auto-select @1920x1080 +1440+0 {ViewPortIn=1920x1080, ViewPortOut=1920x1080+0+0, ForceCompositionPipeline=On, ForceFullCompositionPipeline=On}"' --stoppedcmd 'nvidia-settings -a CurrentMetaMode="DPY-2: 1920x1080_240 @1920x1080 +0+0 {ViewPortIn=1920x1080, ViewPortOut=1920x1080+0+0}"' --app 'csgo_linux64'
python $HOME/python/app-command.py --runningcmd 'nvidia-settings -a DigitalVibrance=716' --stoppedcmd 'nvidia-settings -a DigitalVibrance=0' --app 'csgo_linux64'
