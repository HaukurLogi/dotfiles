; vim: filetype=polybar:et:ts=4:sts=4:sw=4:fdm=marker

[bar/top]
monitor = ${env:MONITOR:}

# -- Settings -- {{{

dpi = -1
width = 100%
height = 20
background = #aa000000
foreground = #ffffff

; i3 stuff 
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

# -- Fonts -- {{{

font-0=Jetbrains Mono:size=5;2
font-1=FontAwesome:size=6;2

# }}}

# }}}

# -- Modules -- {{{

modules-left = i3 xkeyboard filesystem volume battery
modules-center = date
modules-right = cpu gpu temperatures memory

module-margin = 3

# -- Left -- {{{

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-foreground = #000000
label-focused-background = #ffffff
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #aa000000
label-visible-padding = 1

label-unfocused = %index%
label-unfocused-foreground = #ffffff
label-unfocused-background = #aa000000
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #aaff0000
label-urgent-padding = 1

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = %layout%

format-prefix = "KEY: "

[module/filesystem]
type = internal/fs
mount-0 = /

label-mounted = %mountpoint%: %free%/%total%
label-unmounted = %mountpoint%: not mounted

interval = 25

[module/volume]
type=custom/script
exec = ~/.config/polybar-scripts/pipewire-volume.sh

format-prefix = "VOL: "

[module/battery]
type=custom/script
exec-if = ~/.config/polybar-scripts/display-battery/target/release/display-battery --check
exec = ~/.config/polybar-scripts/display-battery/target/release/display-battery
tail = true

internal = 1
format-prefix = "BAT: "

# }}}

# -- Centre -- {{{

[module/date]
type = internal/date
format-margin = 0
label = %date%, %time%

time = %H:%M:%S
date = %d %b

interval = 1

# }}}

# -- Right -- {{{

[module/cpu]
type = internal/cpu
format = <label>
label = %percentage-sum%%

interval = 1
format-prefix = "CPU: "

[module/gpu]
type = custom/script 
exec = ~/.config/polybar-scripts/radeon.py

interval = 1
format-prefix = "GPU: "

[module/temperatures]
type = custom/script
exec = ~/.config/polybar-scripts/temps.sh

interval = 1

[module/memory]
type = internal/memory
format = <label>
label = %gb_used%/%gb_total%

interval = 1
format-prefix = "MEM: "

# }}}

# }}}
