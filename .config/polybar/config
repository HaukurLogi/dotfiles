; vim: filetype=polybar:et:ts=4:sts=4:sw=4:fdm=marker

[bar/top]
monitor = ${env:MONITOR:}

# -- Settings -- {{{

width = 100%
height = 20
background = #000000
foreground = #ffffff

; i3 stuff 
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

# -- Fonts -- {{{

font-0=Jetbrains Mono:size=10;2
font-1=FontAwesome:size=6;2

# }}}

# }}}

# -- Modules -- {{{

modules-left = i3 xkeyboard filesystem volume
modules-center = date
modules-right = cpu gpu temperatures memory

module-margin = 3

# -- Left -- {{{

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-foreground = #000000
label-focused-background = #ffffff
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #aa000000
label-visible-padding = 1

label-unfocused = %index%
label-unfocused-foreground = #ffffff
label-unfocused-background = #aa000000
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #aaff0000
label-urgent-padding = 1

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
label-layout = %layout%
format-prefix = "KEY: "

[module/volume]
type=internal/pulseaudio
format-volume = <label-volume>
format-muted = <label-muted>
label-volume = VOL: %percentage%%
label-muted  = MUT: 0%

interval = 5

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted = %mountpoint%: %free%/%total%
label-unmounted = %mountpoint%: not mounted

interval = 25

# }}}

# -- Centre -- {{{

[module/date]
type = internal/date
format-margin = 0
label = %date%, %time%

time = %H:%M:%S
date = %d %b
interval = 1

# }}}

# -- Right -- {{{

[module/cpu]
type = internal/cpu
format = <label>
label = %percentage-sum%%
interval = 1
format-prefix = "CPU: "

[module/gpu]
type = custom/script   
exec = ~/.config/polybar-scripts/shell/gpu.sh
interval = 1
format-prefix = "GPU: "

[module/temperatures]
type = custom/script
exec = ~/.config/polybar-scripts/shell/temps.sh
interval = 1

[module/memory]
type = internal/memory
format = <label>
label = %gb_used%/%gb_total%
interval = 1
format-prefix = "MEM: "

# }}}

# }}}
