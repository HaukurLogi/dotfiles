; vim: ft=dosini
; This config uses the new syntax (which isn't merged upstream)

[bar/top]
monitor = ${env:MONITOR:}

; Bar settings 
dpi=192
line-size = 2
width = 100%
height = 40
background = #000000
foreground = #ffffff

; Font
font-0=cherry:size=14

; Tray
tray-position = right
tray-background = #000000

; Modules 
modules-left = i3 xkeyboard filesystem battery
modules-center = date
modules-right = volume gpu cpu memory

module-margin = 3

; Left modules
; i3 stuff 
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #000000
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #000000
label-visible-padding = 1

label-unfocused = %index%
label-unfocused-foreground = #bbbbbb
label-unfocused-background = #000000
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #ffffff
label-urgent-padding = 1

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

format-prefix = "KEY: "

label-layout = %layout%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

label-mounted = %mountpoint%: %free%/%total%
label-unmounted = %mountpoint%: not mounted

[module/battery]
type=custom/script
exec-if=~/.config/polybar/display-battery/target/release/display-battery --check
exec=nice -n10 ~/.config/polybar/display-battery/target/release/display-battery
tail=true
format-prefix="BAT: "

; Center modules
[module/date]
type = internal/date
interval = 1
format-margin = 0
label = %date%, %time%

time = %H:%M:%S
date = %d %b

; Right modules
[module/volume]
type=internal/pulseaudio
interval=5

format-volume = <label-volume>
format-muted = <label-muted>

label-volume = VOL: %percentage%%
label-muted  = MUT: 0%

[module/gpu]
type=custom/script
exec-if=nvidia-smi -h
exec=~/.config/polybar/display-nvidia-mem/target/release/display-nvidia-mem
tail=true
format-prefix="GPU: "

[module/cpu]
type=internal/cpu
interval = 1

format = <label>
label = CPU: %percentage-sum%%

[module/memory]
type=internal/memory
interval = 1
format = <label>
label = MEM: %gb_used%/%gb_total%
