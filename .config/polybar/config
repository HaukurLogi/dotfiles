#Inspired By CodeCast


; vim: ft=dosini
;
; This config uses the new syntax (which isn't merged upstream)

[settings]
throttle-ms = 50
throttle-limit = 3

[bar/top]
monitor = ${env:MONITOR:}

width = 100%
height = 20

background = #2f343f
foreground = #676e7d
linecolor = #ffffff

font-0 = System San Francisco Display:style=Thin:size=12;3
#font-0 = Fire Code:style=Bold:size=12;3
font-1 = FontAwesome:style=Regular:size=13;3
font-2 = Weather Icons:style=Regular:size=13;3
modules-left = i3 
modules-right = i3-volume battery weather network cpu memory date poweroff
module-margin = 3

tray-position = right
tray-maxsize = 16
tray-padding = 1

; i3 stuff
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

; Right modules
[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar.
pin-workspaces = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output.
index-sort = true

label-focused = %index%
; label-focused-font = 0
label-focused-foreground = #f3f4f5
label-focused-background = #2f343f
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #5f676a
label-visible-padding = 1

label-unfocused = %index%
; label-unfocused-font = 0
label-unfocused-foreground = #676e7d
label-unfocused-background = #2f343f
label-unfocused-padding = 1

label-urgent = %index%
; label-urgent-font = 0
label-urgent-foreground = #ffffff
label-urgent-background = #900000
label-urgent-padding = 1

label-seperator = |
label-seperator-padding = 1
label-seperator-foreground = #ffffff

; Left modules
[module/volume]
type=internal/pulseaudio
interval=5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = VOL: %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = VOL: %percentage%% (muted)
; label-muted-foreground = #666

[module/weather]
type = custom/script
exec = ~/polybar-forecast/target/release/polybar-forecast --api-key=fa3fd985867e2ef4441b9ba9c04155ad --city-id=3417195 --units=metric
exec-if = ping openweathermap.org -c 1

;label = %output:0:15:...%
label = %output%
interval = 10
label-font = 2

[module/i3-volume]
type = custom/script
tail = true
label = %output%
exec = ~/i3-volume/volume listen "%i %v %p\n"
scroll-up = ~/i3-volume/volume up
scroll-down = ~/i3-volume/volume down
click-left = ~/i3-volume/volume mute
click-right = exec pavucontrol &

#[module/poweroff]
#type=custom/script
#exec=echo "  "
#click-left=poweroff
#click-right=reboot

[module/battery]
type=custom/script
exec-if=~/.config/polybar/display-battery/target/release/display-battery --check
exec=nice -n10 ~/.config/polybar/display-battery/target/release/display-battery
tail=true
format-prefix="BAT: "

; [module/battery]
; type = internal/battery
;
; battery = BAT0
; adapter = AC
;
; full-at = 100
;
; label-full = %percentage%%
; format-full = BAT:  <label-full>
;
; label-charging = %percentage%% (%time%)
; format-charging = BAT:  <label-charging>
;
; label-discharging = %percentage%% (%time%)
; format-discharging = BAT: <label-discharging>

[module/network]
type=custom/script
exec=nice -n4 ~/.config/polybar/bandwidth
tail=true
format-prefix="NET: "

[module/gpu]
type=custom/script
exec-if=nvidia-smi -h
exec=~/.config/polybar/display-nvidia-mem/target/release/display-nvidia-mem
tail=true
format-prefix="GPU: "

[module/kl]
type=custom/script
exec=~/bin/keylogger
tail=true
format-prefix="KL: "

[module/cpu]
type=internal/cpu
interval = 1
; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>
; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU: %percentage-sum%%

[module/memory]
type=internal/memory
interval = 1
; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
;   <ramp-used>
;   <ramp-free>
;   <bar-swap-used>
;   <bar-swap-free>
;   <ramp-swap-used>
;   <ramp-swap-free>
format = <label>
; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%
label = MEM: %gb_used%/%gb_total%

[module/filesystem]
type=internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /home

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <label-mounted>

; Available tags:
;   <label-unmounted> (default)
format-unmounted = <label-unmounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %mountpoint%: %used%

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted =
; label-unmounted-foreground = #55

[module/wh]
type = custom/script
exec = wh summary --now --duration
interval = 5
format-prefix = "WH: "

[module/date]
type = internal/date
; Available tokens:
;   %date%
;   %time%
; Default: %date%
label = %date% %time%

date = %a %Y-%m-%d
time = %H:%M:%S

