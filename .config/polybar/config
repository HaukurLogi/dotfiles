; vim: ft=dosini
; This config uses the new syntax (which isn't merged upstream)

[settings]
throttle-ms = 50
throttle-limit = 3

[bar/top]
monitor = ${env:MONITOR:}

; Bar settings
line-size = 2
enable-ipc=true
width = 100%
height = 25
border-size = 0
padding=1
background = #000000
foreground = #ffffff
linecolor = #000000
border-color = #141414

; Fonts
font-0=cherry:size=12:3
font-1=FontAwesome:size=9;3
font-2=SymbolsNerdFont:size=13;3

; Modules
modules-left = alacritty i3 i3-window-title xkeyboard network-eik network-sja
modules-center = date
modules-right = volume cpu filesystem memory border
module-margin = 3

; Tray
tray-position = right
tray-padding = 5
tray-background = #0d0d0d


; i3 stuff
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

; Left modules
[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-foreground = #fe0100
label-focused-background = #000000
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #000000
label-visible-padding = 1

label-unfocused = %index%
label-unfocused-foreground = #800000
label-unfocused-background = #000000
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #0066ff
label-urgent-background = #aa0000
label-urgent-padding = 1

[module/i3-window-title]
type = custom/script
exec = bin/i3-window-title
format-prefix = "APP: "

tail = true

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

layout-icon-0 = us;
layout-icon-1 = is;

format-prefix = "KEY: "
format-prefix-foreground = #33ff00
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-foreground = #33ff00
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = #000000
label-indicator-underline = ${colors.secondary}

[module/network-sja]
type = internal/network
interface = eno1
interface-type = wired

interval = 3.0
udspeed-minwidth = 5
accumulate-stats = true
unknown-as-up = true

format-connected = NET: <label-connected>
format-disconnected = NET: <label-disconnected>

label-connected = ETH %downspeed:9%
label-connected-foreground = #0066ff

label-disconnected = not connected
label-disconnected-foreground = #fe0100

[module/network-eik]
type = internal/network
interface = enp3s0
interface-type = wired

interval = 3.0
udspeed-minwidth = 5
accumulate-stats = true
unknown-as-up = true

format-connected = NET: <label-connected>
format-disconnected = NET: <label-disconnected>

label-connected = ETH %downspeed:9%
label-connected-foreground = #33ff00

label-disconnected = not connected
label-disconnected-foreground = #fe0100

; Center modules
[module/date]
type = internal/date
interval = 1
format-margin = 0
label = %date%, %time%

time = %H:%M:%S
date = %d %b

; Right modules
[module/volume]
type=internal/pulseaudio
interval=5

format-volume = <label-volume>
format-muted = <label-muted>

label-volume = VOL: %percentage%%
label-muted  = MUT: 0%


[module/gpu]
#type=custom/script
#exec-if=nvidia-smi -h
#exec=~/.config/polybar/display-nvidia-mem/target/release/display-nvidia-mem
#tail=true
#format-prefix="GPU: "

[module/cpu]
type=internal/cpu
interval = 1

format = <label>
label = CPU: %percentage-sum%%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

label-mounted = %mountpoint%: %free%/%total%
label-unmounted = %mountpoint%: not mounted

[module/memory]
type=internal/memory
interval = 1
format = <label>
label = MEM: %gb_used%/%gb_total%
