[settings]
throttle-ms = 50
throttle-limit = 3
#pseudo-transparency = true

[bar/top]
monitor = ${env:MONITOR:}

line-size = 2
enable-ipc=true
width = 100%
height = 30
;offset-x = 10%
;offset-y = 5
;radius = 15
border-size = 0
padding=2
bottom=true

pseudo-transparency = false

override-redirect = false

background = aa000000
foreground = #ffffff
linecolor = #ffffff

font-0=cherry:size=12;3
font-1=SymbolsNerdFont:size=12;3
font-2=WeatherIcons:size=12;3

modules-left = alacritty i3 battery xkeyboard weather
modules-center = date
modules-right = switch-volume-p volume cpu memory

module-margin = 3

tray-position = right
tray-padding = 5
tray-background = aa000000


; i3 stuff
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

; Right modules

; Only show workspaces defined on the same output as the bar.

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output.
[module/i3]
type = internal/i3

pin-workspaces = true

label-focused = %index%
; label-focused-font = 0
label-focused-foreground = #ffffff
label-focused-background = #aa000000
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #aa000000
label-visible-padding = 1

label-unfocused = %index%
; label-unfocused-font = 0
label-unfocused-foreground = #b3b3b3
label-unfocused-background = #aa000000
label-unfocused-padding = 1

label-urgent = %index%
; label-urgent-font = 0
label-urgent-foreground = #aaffffff
label-urgent-background = #aa000000
label-urgent-padding = 1

label-seperator = |

; Left modules

