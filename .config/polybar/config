; vim: ft=dosini
; This config uses the new syntax (which isn't merged upstream)

[settings]
throttle-ms = 50
throttle-limit = 3

[bar/top]
monitor = ${env:MONITOR:}

line-size = 2
enable-ipc=true
width = 80%
height = 30
offset-x = 10%
offset-y = 5
radius = 15
border-size = 0
padding=2

override-redirect = true

background = #aa000000
foreground = #ffffff
linecolor = #ffffff

font-0=cherry:size=14;3
font-1=Font Awesome 5 Free Solid:size=8;2
font-2=Font Awesome 5 Free Regular:size=8;2
font-3=Font Awesome 5 Brands:size=8;2
font-4=font\-logos:size=10;2
font-5=IPAGothic:size=11;2
modules-left = i3
modules-center = date
modules-right = volume battery gpu cpu memory

module-margin = 3

tray-position = right
tray-maxsize = 16
tray-padding = 1

; i3 stuff
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
wm-restack = i3

; Right modules

; Only show workspaces defined on the same output as the bar.

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output.
[module/i3]
type = internal/i3

pin-workspaces = true

label-focused = %index%
; label-focused-font = 0
label-focused-foreground = #ffffff
label-focused-background = #aa000000
label-focused-padding = 1

label-visible = %index%
label-visible-foreground = #ffffff
label-visible-background = #aa000000
label-visible-padding = 1

label-unfocused = %index%
; label-unfocused-font = 0
label-unfocused-foreground = #b3b3b3
label-unfocused-background = #aa000000
label-unfocused-padding = 1

label-urgent = %index%
; label-urgent-font = 0
label-urgent-foreground = #aaffffff
label-urgent-background = #aa000000
label-urgent-padding = 1

label-seperator = |

; Left modules
[module/volume]
type=internal/pulseaudio
interval=5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = volume: %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = VOL: %percentage%% (muted)
; label-muted-foreground = #666

[module/battery]
type=custom/script
exec-if=~/.config/polybar/display-battery/target/release/display-battery --check
exec=nice -n10 ~/.config/polybar/display-battery/target/release/display-battery
tail=true
format-prefix="battery: "

[module/network]
type=custom/script
exec=nice -n4 ~/.config/polybar/bandwidth
tail=true
format-prefix="internet: "

[module/gpu]
type=custom/script
exec-if=nvidia-smi -h
exec=~/.config/polybar/display-nvidia-mem/target/release/display-nvidia-mem
tail=true
format-prefix="GPU: "

[module/kl]
type=custom/script
exec=~/bin/keylogger
tail=true
format-prefix="KL: "

[module/cpu]
type=internal/cpu
interval = 1
; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>
; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = cpu: %percentage-sum%%

[module/memory]
type=internal/memory
interval = 1
; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
;   <ramp-used>
;   <ramp-free>
;   <bar-swap-used>
;   <bar-swap-free>
;   <ramp-swap-used>
;   <ramp-swap-free>
format = <label>
; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%
label = memory: %gb_used%/%gb_total%

[module/filesystem]
type=internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /home

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <label-mounted>

; Available tags:
;   <label-unmounted> (default)
format-unmounted = <label-unmounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %mountpoint%: %used%

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted =
; label-unmounted-foreground = #55

[module/wh]
type = custom/script
exec = wh summary --now --duration
interval = 5
format-prefix = "WH: "


[module/date]
type = internal/date
interval = 10
format-margin = 0
label = %date%, %time%

time = %H:%M:%S
date = %d %b
